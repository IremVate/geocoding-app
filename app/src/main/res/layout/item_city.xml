<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal_3"
        android:layout_marginRight="@dimen/margin_normal_3"
        android:layout_marginLeft="@dimen/margin_normal_3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_normal_2">

            <TextView
                android:id="@+id/text_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/text_size_2" />

            <TextView
                android:id="@+id/text_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/margin_small_1" />

            <TextView
                android:id="@+id/text_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/margin_small_1"/>

            <TextView
                android:id="@+id/text_population"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/margin_small_1"/>

            <TextView
                android:id="@+id/text_iso2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/margin_small_1"/>

            <TextView
                android:id="@+id/text_iso3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/margin_small_1"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
